@model ContactUsViewModel

@{
    ViewData["Title"] = "ویرایش تماس مشتری " + Model.FullName;
}

@section styles{
    <script src="~/lib/ckeditor/ckeditor.js" asp-append-version="true"></script>
}

<div class="card mt-5">
    <div class="card-header">
        <h5 class="card-title">@ViewData["Title"]</h5>
    </div>
    <div class="card-body">
        <form asp-controller="ContactUsManagement"
              asp-action="Edit"
              method="post"
              enctype="multipart/form-data">
            <partial name="_CustomValidationSummary" />
            <div class="form-group row">
                <label asp-for="FullName" class="col-md-2 col-form-label text-md-left"></label>
                <div class="col-md-10">
                    <input dir="rtl" asp-for="FullName" class="form-control" readonly="readonly" />
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Email" class="col-md-2 col-form-label text-md-left"></label>
                <div class="col-md-10">
                    <input dir="ltr" asp-for="Email" class="form-control" readonly="readonly" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Subject" class="col-md-2 col-form-label text-md-left"></label>
                <div class="col-md-10">
                    <input dir="rtl" asp-for="Subject" class="form-control" readonly="readonly" />
                    <span asp-validation-for="Subject" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Description" class="col-md-2 col-form-label text-md-left"></label>
                <div class="col-md-10">
                    <textarea dir="rtl" asp-for="Description" class="form-control" readonly="readonly"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Answer" class="col-md-2 col-form-label text-md-left"></label>
                <div class="col-md-10">
                    <textarea dir="rtl" asp-for="Answer" class="form-control"></textarea>
                    <span asp-validation-for="Answer" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="offset-md-2 col-md-10">
                    <input asp-for="Id" />
                    <security-trimming asp-area="" asp-controller="ContactUsManagement" asp-action="Edit">
                        <button type="submit" class="btn btn-info col-md-2">ارسال</button>
                    </security-trimming>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts
{
    <script type="text/javascript">
        
        //CKEDITOR.replace('Description', {language: 'fa'});
        //CKEDITOR.replace('Answer', {language: 'fa'});
        $('#Description').height(500);
        $('#Answer').height(500);
    </script>
}