@model IEnumerable<FolderViewModel>

<div class="table-responsive">
    <table id="all-roles-list" class="table table-striped table-hover table-bordered">
        <thead class="thead-light">
            <tr>
                <th class="text-center">نام</th>
                <th class="text-center w-50">عملیات</th>
            </tr>
        </thead>
        <tbody>
            @if (!Model.Any())
            {
                <tr>
                    <td colspan="2" class="text-center">هیچ دیتایی یافت نشد</td>
                </tr>
            }
            else
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td class="text-center">@item.Name</td>
                        <td class="text-center">

                            <security-trimming asp-area="" asp-controller="Folders" asp-action="RenderPictureList">
                                <a id="btnPictureList-@item.Id" data-edit-id="@item.Id" class="btn btn-sm btn-secondary" asp-controller="Folders" asp-action="RenderPictureList" asp-route-id="@item.Id">لیست فایل ها</a>    
                            </security-trimming>
                            <security-trimming asp-area="" asp-controller="Folders" asp-action="RenderAddPicture">
                                <a id="btnAddPicture-@item.Id" data-edit-id="@item.Id" class="btn btn-sm btn-info" asp-controller="Folders" asp-action="RenderAddPicture" asp-route-id="@item.Id">درج فایل</a>
                            </security-trimming>

                            <security-trimming asp-area="" asp-controller="Folders" asp-action="RenderEdit">
                                <a id="btnEdit-@item.Id" data-edit-id="@item.Id" class="btn btn-sm btn-primary" asp-controller="Folders" asp-action="RenderEdit" asp-route-id="@item.Id">ویرایش</a>
                            </security-trimming>
                            <security-trimming asp-area="" asp-controller="Folders" asp-action="RenderDelete">
                                <a href="#" id="btnDelete-@item.Id" data-delete-id="@item.Id" class="btn btn-sm btn-danger">حذف</a>
                            </security-trimming>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>