@model PageViewModel
<partial name="_CustomValidationSummary" />
<form asp-action="Delete" method="post" class="form-horizontal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                <h4 class="modal-title">حذف یک صفحه</h4>
            </div>
            <div class="modal-body">
                <span class="text-center">
                    آیا می‌خواهید صفحه
                    <strong>@Model.Title</strong>
                    را حذف کنید؟
                    <br />
                </span>
                <input asp-for="Id" />
            </div>
            <div class="modal-footer">
                <security-trimming asp-area="" asp-controller="Pages" asp-action="Delete">
                    <button class="btn btn-danger" type="submit">تائید حذف</button>
                </security-trimming>
                <button class="btn" data-dismiss="modal" aria-hidden="true">انصراف</button>
            </div>
        </div>
    </div>
</form>