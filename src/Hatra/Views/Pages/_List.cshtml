@model IEnumerable<PageViewModel>

<div class="table-responsive">
    <table id="all-roles-list" class="table table-striped table-hover table-bordered">
        <thead class="thead-light">
            <tr>
                <th class="text-center">نام</th>
                <th class="text-center">قابل نمایش</th>
                <th class="text-center">نمایش در آخرین مطالب</th>
                <th class="text-center w-25">عملیات</th>
            </tr>
        </thead>
        <tbody>
            @if (!Model.Any())
            {
                <tr>
                    <td colspan="4" class="text-center">هیچ دیتایی یافت نشد</td>
                </tr>
            }
            else
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td class="text-center">@item.Title</td>
                        <td class="text-center">
                            @if (item.IsShow)
                            {
                                <span class="fa fa-check text-success"></span>
                            }
                            else
                            {
                                <span class="fa fa-minus text-danger"></span>
                            }
                        </td>
                        <td class="text-center">
                            @if (item.IsShowInLastContent)
                            {
                                <span class="fa fa-check text-success"></span>
                            }
                            else
                            {
                                <span class="fa fa-minus text-danger"></span>
                            }
                        </td>
                        <td class="text-center">
                            <a id="btnShow-@item.Id" data-show-id="@item.Id" class="btn btn-sm btn-success" asp-controller="ShowPage" asp-action="ShowPageDetail" asp-route-id="@item.Id" asp-route-slugUrl="@item.SlugUrl" target="_blank">نمایش</a>
                            <security-trimming asp-area="" asp-controller="Pages" asp-action="RenderEdit">
                                <a id="btnEdit-@item.Id" data-edit-id="@item.Id" class="btn btn-sm btn-primary" asp-controller="Pages" asp-action="RenderEdit" asp-route-id="@item.Id">ویرایش</a>
                            </security-trimming>
                            <security-trimming asp-area="" asp-controller="Pages" asp-action="RenderDelete">
                                <a href="#" id="btnDelete-@item.Id" data-delete-id="@item.Id" class="btn btn-sm btn-danger">حذف</a>
                            </security-trimming>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>